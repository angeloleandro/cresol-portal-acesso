# CONFIGURAÇÕES NECESSÁRIAS PARA O ARQUIVO .env.local
# Copie o conteúdo abaixo para um arquivo chamado .env.local na raiz do projeto

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Para funções de servidor (opcional)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Variáveis de ambiente para os servidores MCP
# MCP Server Environment Variables
GITHUB_TOKEN=your_github_token_here
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here
SUPABASE_ACCESS_TOKEN_CRESOL=your_supabase_access_token_here
SUPABASE_PROJECT_REF=your_project_ref_here
FIGMA_API_KEY=your_figma_api_key_here
CONTEXT7_API_KEY=your-context7-api-key-here
MCP_FILESYSTEM_ALLOWED_DIRS=/path/to/your/project
