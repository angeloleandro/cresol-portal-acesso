{
  "servers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "supabase-prisma-ia": {
      "command": "npx",
      "args": [
        "-y", 
        "@supabase/mcp-server-supabase@latest",
        "--project-ref=eefkvznetuidmvnsuxhm",
        "--access-token=${env:SUPABASE_ACCESS_TOKEN}"
      ]
    },
    "supabase-thais-silva-terapeuta": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest", 
        "--read-only",
        "--project-ref=btszxihzugeppcvnykxk"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${env:SUPABASE_ACCESS_TOKEN}"
      }
    },
    "supabase-cresol": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--project-ref=taodkzafqgoparihaljx"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${env:SUPABASE_ACCESS_TOKEN_CRESOL}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "playwright-mcp-server"],
      "env": {}
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "mcp-filesystem-server", "/home/angel/projetos"],
      "env": {}
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "figma-developer-mcp"],
      "env": {
        "FIGMA_API_KEY": "${env:FIGMA_API_KEY}"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp"],
      "env": {}
    },
    "magic-ui": {
      "command": "npx",
      "args": ["-y", "@21st-dev/magic-mcp"],
      "env": {}
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "mcp-memory-server"],
      "env": {}
    },
    "mui": {
      "command": "npx",
      "args": ["-y", "@mui/mcp-server"],
      "env": {}
    },
    "chakra-ui": {
      "command": "npx",
      "args": ["-y", "@chakra-ui/mcp-server"],
      "env": {}
    }
  },
}
